# ===========================================
# RestifiedTS Framework Development Environment
# ===========================================
# Copy this file to .env for development

# Core Framework Settings
NODE_ENV=development
LOG_LEVEL=debug

# Test Database Settings (for framework tests)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=restifiedts_test
DB_USER=test_user
DB_PASS=test_pass

# Test API Settings (for framework tests)
API_BASE_URL=https://jsonplaceholder.typicode.com
API_TIMEOUT=30000

# Test Reporting
REPORTS_DIR=output/reports
SNAPSHOTS_DIR=output/snapshots
LOGS_DIR=output/logs

# Performance Testing
ARTILLERY_HOST=localhost
ARTILLERY_PORT=8080

# Security Testing
ZAP_API_URL=http://localhost:8080
ZAP_PROXY_HOST=localhost
ZAP_PROXY_PORT=8081