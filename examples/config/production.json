{
  "environment": "production",
  "services": {
    "userService": {
      "baseURL": "https://user-service.example.com",
      "timeout": 10000,
      "retries": 5,
      "headers": {
        "Content-Type": "application/json",
        "X-Environment": "production"
      }
    },
    "paymentService": {
      "baseURL": "https://payment-service.example.com",
      "timeout": 15000,
      "retries": 5,
      "headers": {
        "Content-Type": "application/json",
        "X-Environment": "production"
      }
    },
    "notificationService": {
      "baseURL": "https://notification-service.example.com",
      "timeout": 8000,
      "retries": 3,
      "headers": {
        "Content-Type": "application/json",
        "X-Environment": "production"
      }
    },
    "orderService": {
      "baseURL": "https://order-service.example.com",
      "timeout": 12000,
      "retries": 4,
      "headers": {
        "Content-Type": "application/json",
        "X-Environment": "production"
      }
    }
  },
  "database": {
    "host": "${DB_HOST}",
    "port": 5432,
    "database": "restified_prod",
    "username": "${DB_USERNAME}",
    "password": "${DB_PASSWORD}",
    "ssl": true,
    "pool": {
      "min": 10,
      "max": 50
    }
  },
  "authentication": {
    "jwt": {
      "secret": "${JWT_SECRET}",
      "expiresIn": "2h"
    },
    "oauth": {
      "clientId": "${OAUTH_CLIENT_ID}",
      "clientSecret": "${OAUTH_CLIENT_SECRET}",
      "tokenUrl": "https://auth.example.com/oauth/token"
    }
  },
  "logging": {
    "level": "warn",
    "format": "json",
    "includeRequestBody": false,
    "includeResponseBody": false
  },
  "testing": {
    "parallel": true,
    "maxConcurrency": 20,
    "timeout": 60000,
    "retries": 3
  }
}